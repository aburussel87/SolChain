# Frontend Environment Configuration
# Copy this file to .env and update the values

# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_WS_URL=ws://localhost:5000

# Blockchain Configuration
REACT_APP_CHAIN_ID=31337
REACT_APP_NETWORK_NAME=localhost
REACT_APP_RPC_URL=http://localhost:8545

# Smart Contract Addresses (Update after deployment)
REACT_APP_SOLAR_TOKEN_ADDRESS=
REACT_APP_ENERGY_TRADING_ADDRESS=
REACT_APP_ENERGY_MARKETPLACE_ADDRESS=
REACT_APP_GOVERNANCE_ADDRESS=

# App Configuration
REACT_APP_NAME=SolChain
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Peer-to-Peer Solar Energy Trading Platform

# Features Flags
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_CHAT=true

# Third-party Services
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=

# Theme Configuration
REACT_APP_THEME=light
REACT_APP_PRIMARY_COLOR=#1976d2
REACT_APP_SECONDARY_COLOR=#dc004e

# Map Configuration (for energy visualization)
REACT_APP_MAPBOX_TOKEN=
REACT_APP_DEFAULT_LAT=40.7128
REACT_APP_DEFAULT_LNG=-74.0060

# Social Links
REACT_APP_GITHUB_URL=https://github.com/greydevs/solchain
REACT_APP_TWITTER_URL=https://twitter.com/greydevs
REACT_APP_WEBSITE_URL=https://greydevs.com
