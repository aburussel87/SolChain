{
  "name": "solchain-backend",
  "version": "1.0.0",
  "description": "SolChain Backend API - BCOLBD 2025 Blockchain Project by Team GreyDevs",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "init-db": "node init-db.js",
    "seed-db": "node init-db.js --seed",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "build": "npm run lint && npm test",
    "deploy:contracts": "cd ../smart-contracts && npx hardhat deploy",
    "compile:contracts": "cd ../smart-contracts && npx hardhat compile"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "sequelize": "^6.35.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "web3": "^4.3.0",
    "axios": "^1.6.2",
    "multer": "^1.4.5-lts.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.0",
    "@types/jest": "^29.5.8"
  },
  "keywords": [
    "blockchain",
    "solar",
    "energy",
    "p2p",
    "trading",
    "microgrid",
    "bcolbd",
    "2025",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Team GreyDevs",
  "contributors": [
    "Ghagra Salem Debnath",
    "Md Abu Russel",
    "Md Abu Sufian",
    "A H M Fuad"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/greydevs/solchain"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error"
    }
  }
}